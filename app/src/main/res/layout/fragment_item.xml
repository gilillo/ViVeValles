<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:car_view="http://schemas.android.com/apk/res-auto"
    car_view:cardCornerRadius="4dp"
    car_view:cardElevation="5dp"
    android:layout_marginBottom="5dp"
    car_view:cardBackgroundColor="#ffffffff">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
   >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"

    >

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/id_item_lista"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/imagen_item"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/id_item_lista"
        android:layout_toEndOf="@+id/id_item_lista" />
</RelativeLayout>
